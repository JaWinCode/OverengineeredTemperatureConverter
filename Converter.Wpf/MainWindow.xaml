<Window x:Class="Converter.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter.Wpf"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True"
        Title="Converter" Height="450" Width="800">
    <Border
        BorderBrush="#D1D1D1"
        BorderThickness="1"
        CornerRadius="10">
        <StackPanel>
            <Border CornerRadius="10,10,0,0" Height="30" BorderThickness="0 0 0 1" BorderBrush="#D1D1D1" Background="#F9F8F9" MouseDown="TopBar_DragMove" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Grid.Column="1" 
                        Text="Converter" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        FontWeight="Bold"/>
                    <Button Background="Transparent" Grid.Column="2" Click="Close_Window" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="LightGray"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border 
                                                Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Image
                            Source="{StaticResource CloseImage}"
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>

                </Grid>
            </Border>
            <Grid Height="420">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Border 
                    BorderThickness="0, 0, 1, 0" 
                    BorderBrush="#D1D1D1" 
                    Background="#F9F8F9"
                    CornerRadius="0,0,0,10">
                    <StackPanel>
                        <RadioButton 
                            Content="Temperatures"
                            FontSize="14"
                            Margin="0,20,0,0"
                            Height="40"
                            BorderThickness="0"
                            Style="{StaticResource NavButton}"
                            IsChecked="{Binding ConverterType, Mode=TwoWay, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static local:ConverterTypes.Temperatur}}"/>

                        <RadioButton 
                            Content="Number Sytems"
                            FontSize="14"
                            Height="40"
                            BorderThickness="0"
                            Style="{StaticResource NavButton}"
                            IsChecked="{Binding ConverterType, Mode=TwoWay,Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static local:ConverterTypes.NumberSystems}}"/>
                    </StackPanel>
                </Border>
                <Border
                    Grid.Column="1"
                    Background="#FFFEFF"
                    CornerRadius="0,0,10,0">
                    <StackPanel>
                        <Border Height="30" Width="240" Padding="4,0,4,0" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding UnitValueInput}" Style="{StaticResource HintTextBox}" Tag="Enter Value!"/>
                                <ComboBox Grid.Column="1" ItemsSource="{Binding Results}" DisplayMemberPath="UnitName" SelectedItem="{Binding GetFirstUnitOption, Mode=TwoWay}" VerticalContentAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ListView Name="listView" ItemsSource="{Binding Results}" Height="300" Width="240" Style="{StaticResource ResultView}" ItemContainerStyle="{StaticResource ResultViewItem}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="50" HorizontalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="180"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Height="30" Grid.Column="0" Grid.RowSpan="2" Background="Green" CornerRadius="15">
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="14" FontWeight="Bold" Text="{Binding UnitFirstLetter}"/>
                                        </Border>
                                        <TextBlock Grid.Column="1" Text="{Binding UnitName}" VerticalAlignment="Bottom" Margin="10,0,0,0" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding UnitName}" VerticalAlignment="Top" Margin="10,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Border>
</Window>
